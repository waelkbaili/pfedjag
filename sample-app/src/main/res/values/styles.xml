<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/back_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/menu_item</item>


        <item name="firstTxtColor">@color/gray</item>
        <item name="secondTxtColor">@color/white</item>
        <item name="firstBack">@color/white</item>
        <item name="secondBack">@color/black</item>
        <item name="colorText">@color/enable_forground_green</item>
        <item name="bg">@color/white</item>
        <item name="dialog">@color/white</item>
        <item name="toolbar">@color/tool_light</item>
        <item name="android:itemBackground">@color/tool_light</item>
        <item name="layout_back">@color/back_light</item>


    </style>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/back_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/menu_item</item>


        <item name="firstTxtColor">@color/white</item>
        <item name="secondTxtColor">@color/black</item>
        <item name="firstBack">@color/button_back</item>
        <item name="secondBack">@color/white</item>
        <item name="colorText">@color/orange</item>
        <item name="bg">@color/black</item>
        <item name="dialog">@color/alert</item>
        <item name="toolbar">@color/tool_dark</item>
        <item name="android:itemBackground">@color/tool_dark</item>
        <item name="layout_back">@color/back_dark</item>



    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">?attr/firstTxtColor</item>
    </style>

    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">?attr/firstTxtColor</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">?attr/firstTxtColor</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
    </style>

    <style name="MyDialogThemePlus" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg_plus</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#4D7D8D</item>
        <item name="android:textColorSecondary">#4D7D8D</item>
        <item name="android:textColor">?attr/firstTxtColor</item>

    </style>`





</resources>
